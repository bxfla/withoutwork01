        <LinearLayout
            style="@style/linerlayout">
            <ImageView
               style="@style/ImaheView"
                android:src="@drawable/password"/>
            <EditText
                android:id="@+id/et_password"
              style="@style/EditText"
                android:hint="请输入密码"/>
        </LinearLayout>
        //分割线
        <View
