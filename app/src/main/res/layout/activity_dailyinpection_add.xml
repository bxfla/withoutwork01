<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dailyinpection_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whith"
    tools:context="com.xb.powerplatform.dailyinspection.activity.DailyInpectionAddActivity">

    <com.xb.powerplatform.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/work_add">
    </com.xb.powerplatform.utilsclass.myViews.Header>

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    style="@style/linerlayout">
                    <TextView
                        android:text="地点："
                        style="@style/TextView"/>

                    <EditText
                        android:id="@+id/etName"
                        android:background="@null"
                        android:textColor="@color/black"
                        style="@style/activity_edittext"/>
                </LinearLayout>
                <View style="@style/line"/>

                <LinearLayout
                    style="@style/linerlayout">
                    <Spinner
                        android:id="@+id/sp1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </Spinner>
                    <Spinner
                        android:id="@+id/sp2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </Spinner>
                    <Spinner
                        android:id="@+id/sp3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                    </Spinner>
                </LinearLayout>
                <View style="@style/line"/>

                <LinearLayout
                    style="@style/linerlayout">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                           style="@style/activity1_radionbutton"
                            android:text="现场解决"/>
                        <RadioButton
                            style="@style/activity1_radionbutton"
                            android:text="处罚检索"/>

                    </RadioGroup>
                </LinearLayout>
                <View style="@style/line"/>

                <LinearLayout
                    style="@style/linerlayout">
                    <TextView
                        android:text="描述："
                        style="@style/TextView"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/ziti"/>
                    <EditText
                        android:id="@+id/tvReson"
                        style="@style/EditText"
                        android:hint="关键字1" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@color/ziti"
                        android:layout_gravity="center_vertical">
                    </View>
                    <EditText
                        android:id="@+id/tvReson1"
                        android:hint="关键字2"
                        style="@style/EditText"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:background="@color/color_bg_selected"
                        android:textSize="15dp"
                        android:text="查询"
                        android:gravity="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <View style="@style/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="原因："
                        style="@style/TextView"/>
                    <EditText
                        android:id="@+id/etWhy"
                        android:background="@null"
                        android:textColor="@color/black"
                        style="@style/activity_edittext"/>
                </LinearLayout>
                <View style="@style/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="扣分："
                        style="@style/TextView"/>
                    <EditText
                        android:id="@+id/etNum"
                        android:background="@null"
                        android:textColor="@color/black"
                        style="@style/activity_edittext"/>
                </LinearLayout>
                <View style="@style/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:text="罚款："
                        style="@style/TextView"/>
                    <EditText
                        android:id="@+id/etPer"
                        android:background="@null"
                        android:textColor="@color/black"
                        style="@style/activity_edittext"/>
                </LinearLayout>
                <View style="@style/line"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/photo"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="80dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <Button
                    android:id="@+id/btn"
                    style="@style/Button"
                    android:text="保存" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
