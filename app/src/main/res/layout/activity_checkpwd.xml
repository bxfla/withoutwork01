<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_checkpwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xb.powerplatform.utilsclass.person.activity.CheckPwdActivity">

    <com.xb.powerplatform.utilsclass.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/check_pwd">
    </com.xb.powerplatform.utilsclass.myViews.Header>

    <LinearLayout
        android:id="@+id/ll1"
        style="@style/linerlayout"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="手机号"
            android:gravity="center_vertical"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/etName"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16dp" />
    </LinearLayout>
    <View style="@style/line"></View>
    <LinearLayout
        android:id="@+id/ll2"
        style="@style/linerlayout"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="身份证号"
            android:gravity="center_vertical"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/etIdcard"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16dp" />
    </LinearLayout>
    <View style="@style/line"></View>
    <LinearLayout
        android:id="@+id/ll3"
        style="@style/linerlayout"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="新密码"
            android:gravity="center_vertical"
            android:textSize="16dp" />
        <EditText
            android:id="@+id/etNewPwd"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16dp" />
    </LinearLayout>
    <View style="@style/line"></View>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="45dp"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/color_bg_selected"
        android:text="@string/title_tips_confim"/>

</LinearLayout>
